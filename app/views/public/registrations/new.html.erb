<div class="container">
  <div class="row">
    <div class="col-md-12 mt-md-5">
      <h2>
        <mark class="bg-secondary text-light">会員登録
        </mark>
      </h2>
    </div>
  </div>

  <div class="row">
    <div class="col-md-12 mt-md-5">
      <div class="ml-md-5">
        <p>
          <mark class="bg-secondary text-light">・会員でない方はこちらから会員登録</mark>
        </p>
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <div class="row mt-md-5 mb-md-2">
            <div class="col-md-3">
              <%= f.label :name, "名前" %>
            </div>
            <div class="col-md-9">
              <%= f.text_field :name, autofocus: true, :placeholder =>"例：筋肉太郎", size: 30 %>
            </div>
            <% if @user.errors.include?(:name) %>
              <p style="color: red;" class="offset-md-3 pl-md-3">
                <%= @user.errors.full_messages_for(:name).first %>
              </p>
            <% end %>
          </div>

          <div class="row mb-md-2">
            <div class="col-md-3">
              <%= f.label :email, "メールアドレス" %>
            </div>
            <div class="col-md-9">
              <%= f.email_field :email, :placeholder =>"例：sample@example.com", size: 30 %>
            </div>
            <% if @user.errors.include?(:email) %>
              <p style="color: red;" class="offset-md-3 pl-md-3">
                <%= @user.errors.full_messages_for(:email).first %>
              </p>
            <% end %>
          </div>

          <div class="row mb-md-2">
            <div class="col-md-3">
              <%= f.label :password, "パスワード(#{@minimum_password_length}文字以上)" %>
            </div>
            <div class="col-md-9">
              <%= f.password_field :password, autocomplete: "new-password", size: 30 %>
            </div>
            <% if @user.errors.include?(:password) %>
              <p style="color: red;" class="offset-md-3 pl-md-3">
                <%= @user.errors.full_messages_for(:password).first %>
              </p>
            <% end %>
          </div>

          <div class="row mb-md-2">
            <div class="col-md-3">
              <%= f.label :password_confirmation, "パスワード(確認用)" %>
            </div>
            <div class="col-md-9">
              <%= f.password_field :password_confirmation, autocomplete: "new-password", size: 30 %>
            </div>
            <% if @user.errors.include?(:password) %>
              <p style="color: red;" class="offset-md-3 pl-md-3">
                <%= @user.errors.full_messages_for(:password).first %>
              </p>
            <% end %>
          </div>

          <div class="mb-md-2">
            <%= f.submit "新規登録", class: "btn btn-success  offset-md-3" %>
          </div>
        <% end %>

        <div class="mt-md-5">
          <p>
            <mark class="bg-secondary text-light">・既に登録済みの方</mark>
          </p>
          <p>
            <%= link_to "こちら", new_user_session_path %>からログインしてください。
          </p>
        </div>
      </div>
    </div>
  </div>
</div>