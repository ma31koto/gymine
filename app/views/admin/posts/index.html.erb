<div class="container">
  <div class="row">
    <div class="col-md-12 mt-md-5">
      <h2>
        <mark class="bg-secondary text-light">スポット一覧・追加
        </mark>
      </h2>
    </div>
    <%= link_to "新規登録", new_admin_post_path, class:"btn btn-success" %>
  </div>

  <div class="row">
    <div class="col-md-12 mt-md-5">
      <table class="table text-light">
        <thead class="list-header">
          <tr>
            <th width="30%">スポット名</th>
            <th width="20%">郵便番号</th>
            <th width="30%">住所</th>
            <th width="20%"></th>
          </tr>
        </thead>
        <tbody>
          <% @posts.each do |post| %>
            <tr>
                <td>
              <%= link_to admin_post_path(post) do %>
                  <%= post.name %>
              <% end %>
                </td>
                <td>
                  <%= post.postal_code %>
                </td>
                <td>
                  <%= post.address %>
                </td>
              <td>
                <%= link_to "編集する", edit_admin_post_path(post), class:"btn btn-success" %>
              </td>
              <td></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>