<div class="container">
  <div class="row">
    <div class="col-md-12 mt-md-5">
      <h2>
        <mark class="bg-secondary text-light">管理者ログイン
        </mark>
      </h2>
    </div>
  </div>

  <div class="row">
    <div class="col-md-12">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="mb-md-2 mt-md-5">
          <%= f.label :email, "メールアドレス", class: "col-md-2" %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", :placeholder =>"sample@example.com", size: 30 %>
        </div>
        <div class="mb-2">
          <%= f.label :password, "パスワード", class: "col-md-2"%>
          <%= f.password_field :password, autocomplete: "current-password", size: 30 %>
        </div>
        <% flash.each do |message_type, message| %>
          <%= content_tag :div, message, class: "message_type offset-md-2", style: "color: red;" %>
        <% end %>
        <%= f.submit "ログイン", class: "btn btn-primary offset-md-2" %>
      <% end %>
    </div>
  </div>
</div>

